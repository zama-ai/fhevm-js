{
  "name": "fhevmjs",
  "version": "0.5.8",
  "description": "fhEVM SDK for blockchain using TFHE",
  "main": "lib/node.js",
  "types": "lib/node/node.d.ts",
  "browser": "lib/web.js",
  "type": "module",
  "bin": {
    "fhevm": "bin/fhevm.js"
  },
  "exports": {
    ".": {
      "import": "./lib/web.js",
      "require": "./lib/node.cjs"
    },
    "./web": {
      "import": "./lib/web.js",
      "require": "./lib/web.js"
    },
    "./node": {
      "require": "./lib/node.cjs"
    }
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "lint": "eslint src/",
    "build": "npm run build:lib && npm run build:bundle",
    "build:lib": "rollup -c config/rollup.config.js",
    "build:bundle": "webpack --mode=production --config config/webpack.config.cjs",
    "test": "jest --colors --passWithNoTests --coverage",
    "test:watch": "jest --colors --passWithNoTests --watch",
    "prettier": "prettier --write \"**/*.{js,json,md,sol,ts,yml}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zama-ai/fhevmjs.git"
  },
  "author": "",
  "license": "BSD-3-Clause-Clear",
  "bugs": {
    "url": "https://github.com/zama-ai/fhevmjs/issues"
  },
  "homepage": "https://github.com/zama-ai/fhevmjs#readme",
  "dependencies": {
    "@types/keccak": "^3.0.4",
    "bigint-buffer": "^1.1.5",
    "commander": "^11.0.0",
    "node-fetch": "^2.7.0",
    "node-tfhe": "^0.6.3",
    "sha3": "^2.1.4",
    "tfhe": "^0.6.3",
    "url": "^0.11.3",
    "web3-validator": "^2.0.6"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^5.1.0",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-replace": "^5.0.2",
    "@rollup/plugin-typescript": "^11.1.1",
    "@rollup/plugin-wasm": "^6.1.3",
    "@types/jest": "^29.5.1",
    "@types/node-fetch": "^2.6.11",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.0",
    "ethers": "^6.13.1",
    "fetch-mock-jest": "^1.5.1",
    "jest": "^29.5.0",
    "jest-raw-loader": "^1.0.1",
    "path-browserify": "^1.0.1",
    "prettier": "^3.0.0",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-node-builtins": "^2.0.0",
    "rollup-plugin-polyfill-node": "^0.12.0",
    "stream-browserify": "^3.0.0",
    "to-array-buffer": "^3.2.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.2",
    "tsc-alias": "^1.8.6",
    "tslib": "^2.5.3",
    "url-loader": "^4.1.1",
    "webpack": "^5.82.1",
    "webpack-cli": "^5.1.1",
    "webpack-merge": "^5.9.0"
  }
}
