{
  "compilerOptions": {
    "rootDir": "../src",
    "outDir": "../dist.tmp",
    "emitDeclarationOnly": true,
    "declaration": true,
    "target": "ES2022",
    "lib": ["es2022", "DOM", "WebWorker"],
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "*": ["*"]
    }
  },
  "include": ["../src"],
  "exclude": ["../node_modules", "../src/**/*.test.ts", "../src/test"]
}
